generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  Payment       Payment[]

  @@map(name: "Users")
}

model Department {
  id      String    @id @default(cuid())
  name    String?
  Payment Payment[]

  @@map(name: "Departments")
}

model Payment {
  id             String    @id @default(cuid())
  amount         Int
  item           String
  paymentDate    DateTime
  userInChargeId String
  approvalDate   DateTime?
  status         String
  departmentId   String
  updatedAt      DateTime  @default(now()) @map(name: "created_at")
  createdAt      DateTime  @updatedAt @map(name: "updated_at")

  userInCharge User       @relation(fields: [userInChargeId], references: [id])
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@map(name: "Payments")
}
